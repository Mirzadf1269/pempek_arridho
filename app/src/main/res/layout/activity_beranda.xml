<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".BerandaActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <EditText
            android:id="@+id/search_input"
            android:layout_width="323dp"
            android:layout_height="62dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="54dp"
            android:layout_weight="1"
            android:background="@drawable/search_input_background"
            android:hint="Cari Pempek Apa?"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@id/recomended"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recomended"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Recomended!"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.172"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_input" />


        <HorizontalScrollView
            android:id="@+id/hzsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/code_input_box_background"
            android:padding="16dp"
            app:layout_constraintBottom_toTopOf=""
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recomended">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imagepempek"
                    android:layout_width="307dp"
                    android:layout_height="163dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/paket_sekoci"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/paketsekoci"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Paket Sekoci"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    app:layout_constraintTop_toBottomOf="@id/imagepempek" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Rp.10.000"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    app:layout_constraintTop_toBottomOf="@id/paketsekoci"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imagepempek1"
                    android:layout_width="307dp"
                    android:layout_height="163dp"
                    android:layout_marginStart="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/paket_sekoci"
                   app:layout_constraintStart_toEndOf="@id/imagepempek"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/paketsekoci1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Paket Hemat Arridho"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="@id/imagepempek1"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    app:layout_constraintTop_toBottomOf="@id/imagepempek1"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/harga1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Rp.20.000"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    app:layout_constraintTop_toBottomOf="@id/paketsekoci1"
                    app:layout_constraintStart_toStartOf="@id/paketsekoci1"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imagepempek2"
                    android:layout_width="307dp"
                    android:layout_height="163dp"
                    android:layout_marginStart="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/paket_sekoci"
                    app:layout_constraintStart_toEndOf="@id/imagepempek1"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/paketsekoci2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Paket Premium Arridho"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="@id/imagepempek2"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    app:layout_constraintTop_toBottomOf="@id/imagepempek2"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/harga2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Rp.50.000"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    app:layout_constraintTop_toBottomOf="@id/paketsekoci2"
                    app:layout_constraintStart_toStartOf="@id/paketsekoci2"/>



            </androidx.constraintlayout.widget.ConstraintLayout>


        </HorizontalScrollView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_inspirasi"
            android:layout_width="323dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="54dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:text="Paket Pilihan"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.172"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hzsv"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_inspirasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/tv_inspirasi"
            tools:listitem="@layout/item_row_inspiration"/>




    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>